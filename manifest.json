{
  "manifest_version": 3,
  "name": "Note Taker",
  "description": "Save text as notes",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "homepage_url": "https://github.com/Exoldarium/note-taker-chrome-extension",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_page": "options/options.html"
}